# mikhmon Environment Configuration
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=mikhmon
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080

# Database Configuration (for future database support)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=mikhmon
DB_USERNAME=mikhmon
DB_PASSWORD=your_secure_password_here

# Redis Configuration (for caching and sessions)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0

# Security Settings
APP_KEY=base64:your_32_character_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Session Configuration
SESSION_LIFETIME=120
SESSION_DRIVER=redis

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=mikhmon_

# File Upload Settings
UPLOAD_MAX_SIZE=64M
POST_MAX_SIZE=64M

# Router Default Settings
DEFAULT_ROUTER_IP=192.168.1.1
DEFAULT_ROUTER_PORT=8728
DEFAULT_HOTSPOT_NAME=mikhmon_Hotspot
DEFAULT_CURRENCY=$

# Email Configuration (optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@mikhmon.local
MAIL_FROM_NAME=mikhmon

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Timezone
TIMEZONE=UTC

# Language
APP_LANGUAGE=en

# Maintenance Mode
MAINTENANCE_MODE=false
